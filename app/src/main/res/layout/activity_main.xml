<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8C8C3"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="220dp"
        android:layout_height="33dp"
        android:fontFamily="@font/acme"
        android:paddingLeft="30sp"
        android:text="Age   Converter"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="188dp"
        android:layout_height="28dp"
        android:layout_marginTop="40dp"
        android:fontFamily="sans-serif-black"
        android:text="Conversion into:-"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.372" />

    <Button
        android:id="@+id/hrs"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="hours"
        app:cornerRadius="200px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dys" />

    <Button
        android:id="@+id/mons"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:text="months"
        app:cornerRadius="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <Button
        android:id="@+id/dys"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="days"
        app:cornerRadius="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mons" />

    <Button
        android:id="@+id/secs"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:text="seconds"
        app:cornerRadius="100px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hrs"
        app:layout_constraintVertical_bias="0.045" />

    <TextView
        android:id="@+id/months"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="24dp"
        android:hint="0 months old"
        android:paddingLeft="12px"
        android:paddingTop="25px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/mons"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.502" />

    <TextView
        android:id="@+id/days"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:paddingTop="25px"
        android:text=" 0 days old"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/dys"
        app:layout_constraintTop_toBottomOf="@+id/months" />

    <TextView
        android:id="@+id/hours"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:hint="0 "
        android:paddingTop="25px"
        android:text=" 0 hours old"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/hrs"
        app:layout_constraintTop_toBottomOf="@+id/days" />

    <TextView
        android:id="@+id/seconds"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:hint="  "
        android:paddingTop="25px"
        android:text="  0 seconds old"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/secs"
        app:layout_constraintTop_toBottomOf="@+id/hours" />

    <Button
        android:id="@+id/age"
        android:layout_width="124dp"
        android:layout_height="48dp"
        android:layout_marginTop="132dp"
        android:text="Input Age"
        app:cornerRadius="100px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.09"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="124dp"
        android:layout_height="30dp"
        android:gravity="center_horizontal"
        android:text="Your date of birth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dull" />

    <TextView
        android:id="@+id/dull"
        android:layout_width="124dp"
        android:layout_height="37dp"
        android:layout_marginTop="124dp"
        android:gravity="bottom|center_horizontal"
        android:text="00/00/00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.763"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/years"
        android:layout_width="333dp"
        android:layout_height="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="38dp"
        android:gravity="center"
        android:text="You are __years __months __years old"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>